<mujoco model="sphere">
    <asset>
        <texture type="skybox" builtin="flat" rgb1="1 1 1" rgb2="1 1 1" width="32" height="32" opacity="0.1"/>
        <material name="sphere_material" rgba="1 0 0 0.5"/>
    </asset>
    <worldbody>
        <body>
            <body name="object" gravcomp="1">
                <joint name="fixed" type="free"/>
                <!-- Removed inertial block for visual-only object -->
                <inertial pos="0 0 0" mass="1" diaginertia="1 1 1"/>
                <geom type="sphere" size="0.05" material="sphere_material" group="0" contype="0" conaffinity="0"/>
            </body>
            <!-- Sites for object grasping -->
            <!-- <site name="bottom_site" pos="0 0 -0.025" size="0.001 0.001 0.001" rgba="0 0 0 0"/> -->
            <site name="bottom_site" pos="0 0 -0.025" size="0.001 0.001 0.001" rgba="0 0 0 0"/>
            <site name="top_site" pos="1 1 0.025" size="0.001 0.001 0.001" rgba="0 0 0 0"/>
            <site name="horizontal_radius_site" pos="0.025 0 0" size="0.001 0.001 0.001" rgba="0 0 0 0"/>
        </body>
    </worldbody>
</mujoco>

